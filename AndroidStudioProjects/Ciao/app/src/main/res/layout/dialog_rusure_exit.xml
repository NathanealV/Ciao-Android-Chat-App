<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rusure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/abeezee"
        android:text="Exit Ciao"
        android:textColor="@color/iron"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rusure_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rusure_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/abeezee"
        android:text="Are you sure you want to exit Ciao?"
        android:textColor="@color/iron"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/rusure_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rusure_msg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/rusure_title"
        android:layout_toRightOf="@+id/rusure_title"
        android:fontFamily="@font/abeezee"
        android:text="Exit"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/rusure_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rusure_exit"
        android:layout_alignBottom="@+id/rusure_exit"
        android:layout_alignEnd="@+id/rusure_msg"
        android:layout_alignRight="@+id/rusure_msg"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/abeezee"
        android:text="No"
        android:textColor="@color/colorAccent" />

</RelativeLayout>